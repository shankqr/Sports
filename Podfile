platform :ios, ‘8.0’

def sports_pods
  pod 'Helpshift'
  pod 'Fabric'
  pod 'Crashlytics'
end
 
target ‘FootballFantasy’ do
    sports_pods
end
 
target ‘BaseballFantasy’ do
    sports_pods
end

target ‘BasketballFantasy’ do
    sports_pods
end

target ‘HockeyFantasy’ do
    sports_pods
end

target ‘HockeyManager’ do
    sports_pods
end
